generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  preferences Json?     // Store AI-related preferences (e.g., AI_ASSIST_LEVEL: 'full', 'suggestions_only')
  goals     Goal[]
  tasks     Task[]
}


model Goal {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  userId      String    @db.ObjectId // Foreign key to User
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  type        String    // e.g., "weekly", "monthly", "quarterly"
  description String
  startDate   DateTime?
  endDate     DateTime?
  status      String    @default("active") // e.g., "active", "completed", "archived"
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  tasks       Task[] // Tasks associated with this goal
}

// Task Model
model Task {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  userId          String    @db.ObjectId // Foreign key to User
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  goalId          String?   @db.ObjectId // Optional foreign key to Goal
  goal            Goal?     @relation(fields: [goalId], references: [id], onDelete: SetNull) // If goal is deleted, set goalId to null
  description     String
  dueDate         DateTime?
  priority        Int       @default(0) // 0-10, AI can assign, user can override. Lower number = higher priority for now.
  status          String    @default("todo") // e.g., "todo", "in-progress", "completed", "skipped", "pending_ai_review"
  isAiSuggested   Boolean   @default(false) // Was this task or its details suggested by AI?
  aiRationale     String?   // Why did the AI suggest this (e.g., "Due soon, high priority")
  userOverride    Boolean   @default(false) // Did the user override an AI suggestion?
  aiContextTags   String[]  @default([]) // AI-generated context tags (e.g., "work", "personal", "urgent")
  userContextTags String[]  @default([]) // User-defined context tags
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  // Add more fields as your AI logic develops, e.g., estimated_duration, dependencies, etc.
}
